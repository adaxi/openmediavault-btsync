set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

case "$1" in
	configure)
		########################################################################
		# Set the default settings of the btsync package to those expected by
		# OpenMediaVault.
		########################################################################

		mkdir -p /etc/btsync
		getent passwd btsync || useradd --system --user-group --home-dir /var/lib/btsync --create-home btsync

		########################################################################
		# Update the configuration.
		# <config>
		#   <services>
		#     <btsync>
		#       <enable>0</enable>
		#     </btsync>
		#   </services>
		# </config>
		########################################################################
		if ! omv_config_exists "/config/services/btsync"; then
			echo "Initialize configuration"
			object="<enable>0</enable>"
			omv_config_add_element "/config/services" "btsync" "${object}" true
		fi

	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument '$1'" >&2
		exit 1
	;;
esac

exit 0
